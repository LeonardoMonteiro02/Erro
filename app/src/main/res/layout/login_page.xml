<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/buttonLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A10F1"
        android:text="Entrar com Gmail"
        android:drawableLeft="@drawable/gmail"
        android:drawablePadding="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="60dp"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/buttonFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A10F1"
        android:layout_marginTop="15dp"
        android:text="Entrar com Facebook"
        android:drawableLeft="@drawable/facebook"
        android:drawablePadding="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="60dp"
        android:scaleType="fitCenter" />
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A10F1"
        android:layout_marginTop="15dp"
        android:text="Login Criado"
        android:drawableLeft="@drawable/login"
        android:drawablePadding="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="60dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textViewCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Problemas com login?"
        android:layout_marginTop="15dp"
        android:textColor="#1A10F1" />

</LinearLayout>
